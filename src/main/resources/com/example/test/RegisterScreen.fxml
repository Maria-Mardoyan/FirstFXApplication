<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<VBox fx:id="registerScreen" alignment="CENTER" spacing="20.0" xmlns="http://javafx.com/javafx/18" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.test.RegisterController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
   <TextField fx:id="registerUsernameField" maxWidth="360.0" minWidth="360.0" prefHeight="26.0" prefWidth="360.0" promptText="Username">
      <VBox.margin>
         <Insets top="20.0" />
      </VBox.margin></TextField>
   <PasswordField fx:id="registerPasswordField" maxWidth="360.0" minWidth="360.0" prefHeight="26.0" prefWidth="360.0" promptText="Password" />
   <Button mnemonicParsing="false" onAction="#onRegisterButtonClick" text="Register" />
   <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Already have an account? " />
   <Hyperlink onAction="#onLoginHyperlinkClick" text="Log in" />
</VBox>
